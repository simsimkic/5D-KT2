<Window x:Class="SIMS_Project.View.AccommodationMoveReservationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_Project.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Move Reservation" Height="450" Width="400">
    <Grid>
        <DatePicker HorizontalAlignment="Left" Margin="234,102,0,0" VerticalAlignment="Top" SelectedDate="{Binding Start,  Mode=OneWayToSource}"/>
        <DatePicker HorizontalAlignment="Left" Margin="234,192,0,0" VerticalAlignment="Top" SelectedDate="{Binding End,  Mode=OneWayToSource}"/>
        <Label Content="Select new start date:" HorizontalAlignment="Left" Margin="47,100,0,0" VerticalAlignment="Top"/>
        <Label Content="Select new end date:" HorizontalAlignment="Left" Margin="47,192,0,0" VerticalAlignment="Top"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="154,302,0,0" VerticalAlignment="Top" Height="27" Width="62" Click="BtnConfirm_Click"/>

    </Grid>
</Window>
