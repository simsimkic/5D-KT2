<Window x:Class="SIMS_Project.View.CancelTourForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_Project.View"
        mc:Ignorable="d"
        Title="CancelTourForm" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox x:Name="LstTours" Grid.Row="0" Height="350" Width="700" SelectionMode="Single"></ListBox>
        <Button x:Name="BtnCancelTour" Grid.Row="1" Width="100" Height="25" HorizontalAlignment="Left" Margin="50 0 0 0" Content="Cancel tour" Click="BtnCancelTour_Click" ></Button>
        
    </Grid>
</Window>
