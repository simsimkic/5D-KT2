<Window x:Class="SIMS_Project.View.MarkGuests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_Project.View"
        mc:Ignorable="d"
        Title="MarkGuests" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox x:Name="LstSignedGuests" Grid.Row ="0" Width="500" Height="300" SelectionMode="Single"></ListBox>
        <Button x:Name="BtnConfirm" Grid.Row="1" Width="100" Height="30" Content="Confirm" Margin="0 0 150 0" Click="BtnConfirm_Click"></Button>
        <Button x:Name="BtnCancel" Grid.Row="1" Width="100" Height="30" Content="Cancel" Margin="150 0 0 0" Click="BtnCancel_Click"></Button>
    </Grid>
</Window>
