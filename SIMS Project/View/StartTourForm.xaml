<Window x:Class="SIMS_Project.View.StartTourForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_Project.View"
        mc:Ignorable="d"
        Title="StartTourForm" Height="400" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox x:Name ="LstTours" Width="600" Height="300" SelectionMode="Single"></ListBox>
        <Button x:Name="BtnStart" Grid.Column="1" Width="100" Height="30" Content="Start" VerticalAlignment="Bottom" Margin="0 0 0 100" Click="BtnStart_Click"></Button>
        <Button x:Name="BtnCancel" Grid.Column="1" Width="100" Height="30" Content="Cancel" VerticalAlignment="Bottom" Margin="0 0 0 50" Click="BtnCancel_Click"></Button>
    </Grid>
</Window>
